<section class="half-sec {% if section.settings.image_position == 'left' %}c-right{% else %}c-left{% endif %}">
  <div class="container">
    <div class="row g-3">
      {%- capture image_html -%}
        <div class="col-lg-6">
          {% if section.settings.image != blank %}
            <img 
              src="{{ section.settings.image | image_url: width: 626 }}"
              style="max-width: 626px;"
              class="img-fluid w-100 d-block rounded-40 mx-auto"
              width="626"
              height="449"
              alt="Section Image">
          {% endif %}
        </div>
      {%- endcapture -%}

      {%- capture content_html -%}
        <div class="col-lg-6">
          <div class="content-wrapper h-100 d-flex flex-column justify-content-center">

            {% if section.settings.title != blank %}
              <h2 class="mb-2">{{ section.settings.title }}</h2>
            {% endif %}

            {% if section.settings.subtitle != blank %}
              <span class="fs-24 fw-semibold text-primary d-block mb-3">
                {{ section.settings.subtitle }}
              </span>
            {% endif %}

            {% if section.settings.description != blank %}
              <div class="fs-18 mb-0">
                {{ section.settings.description }}
              </div>
            {% endif %}

          </div>
        </div>
      {%- endcapture -%}

      {% if section.settings.image_position == 'left' %}
        {{ image_html }}
        {{ content_html }}
      {% else %}
        {{ content_html }}
        {{ image_html }}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Half Section",
  "settings": [
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    }
  ],
  "presets": [
    {
      "name": "Half Section"
    }
  ]
}
{% endschema %}
