<section class="faq-sec">
  <div class="container">
    <h2 class="text-center mb-5">{{ section.settings.heading }}</h2>

    <div class="faq">
      {% for block in section.blocks %}
        <div class="faq-category" id="faq-{{ block.id }}">
          <div class="faq-header">
            <h3>
              {% if block.settings.icon != blank %}
                <img
                  src="{{ block.settings.icon | image_url: width: 30 }}"
                  width="30"
                  height="30"
                  alt="Icon"
                  loading="lazy"
                >
              {% endif %}
              {{ block.settings.title }}
            </h3>
            <img
              src="{{ block.settings.arrow_icon | image_url: width: 25 }}"
              class="arrow-icon"
              width="25"
              height="15"
              alt="Arrow"
              loading="lazy"
            >
          </div>

          <div class="faq-content">
            <p>{{ block.settings.content }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<script>
  $(document).ready(function () {
    // Faq
    $('.faq-header').on('click', function () {
      const $category = $(this).closest('.faq-category');
      const $content = $category.find('.faq-content');
      $('.faq-category').not($category).removeClass('active');
      $('.faq-content').not($content).removeClass('active');
      $category.toggleClass('active');
      $content.toggleClass('active');
    });
    $('.faq-item').on('click', function (e) {
      e.stopPropagation();
      const $item = $(this);
      const $answer = $item.find('.faq-answer');
      $item.siblings().removeClass('open').find('.faq-answer').removeClass('active');
      $item.toggleClass('open');
      $answer.toggleClass('active');
    });
    $('.faq-category:first').addClass('active').find('.faq-content').addClass('active');
  });
</script>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Frequently Asked Questions"
    }
  ],

  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Left Icon"
        },
        {
          "type": "image_picker",
          "id": "arrow_icon",
          "label": "Arrow Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Question Title",
          "default": "Cookie Questions"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Answer",
          "default": "Your answer content goes here."
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "FAQ Section"
    }
  ]
}
{% endschema %}
