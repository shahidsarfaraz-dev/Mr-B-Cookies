{{ 'hero.css' | asset_url | stylesheet_tag }}

<section
  class="hero-sec"
  style="
    {% if section.settings.bg_image != blank %}
      background-image: url({{ section.settings.bg_image | image_url }});
    {% endif %}
  "
>
  <div class="container">
    <div
      class="content-wrapper"
      style="max-width: 667px;"
    >
      <span class="sub-title text-primary">
        {{ section.settings.subheading }}
      </span>

      <h1>{{ section.settings.heading }}</h1>

      <p class="description mb-5">
        {{ section.settings.text }}
      </p>

      {% if section.settings.button_label != blank %}
        <a
          href="{{ section.settings.button_link }}"
          class="btn btn-primary"
        >
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Pre-Order This Week’s Batch"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "It’s Not Just Cookies — It’s Comfort"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Lorem Ipsum is simply dummy text of the printing and typeset industry. Lorem Ipsum has been the industry's standard dummy text ever since 1500s."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Order Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
